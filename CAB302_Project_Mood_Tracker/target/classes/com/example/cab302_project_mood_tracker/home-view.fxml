<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cab302_project_mood_tracker.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <GridPane VBox.vgrow="ALWAYS" alignment="CENTER_LEFT" hgap="10" vgap="10">
        <padding>
            <Insets top="25" right="25" bottom="10" left="25"/>
        </padding>
        <Button text="Home" GridPane.rowIndex="1" fx:id="homeButton" onAction="#SwitchToHome"/>
        <Button text="Profile" GridPane.rowIndex="2"/>
        <Button text="Logout" GridPane.rowIndex="3" fx:id="logoutButton" onAction="#SwitchToLogin"/>
    </GridPane>

</VBox>
